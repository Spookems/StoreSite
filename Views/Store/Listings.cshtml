@model IEnumerable<StoreSite.Models.Classes.StoreItem>

@{
    ViewData["Title"] = "Listings";
}

<head>
    <link href="~/css/General.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>

<body>
    <div>

        <div class="col-lg-12" style="float:left;">

            <h4>Filter</h4>
            <div class="row">
                <div class="filterSection col-lg-3">
                    <p class="filterTitle">Input 1</p>
                    <input type="text" />
                </div>

                <div class="filterSection col-lg-3">
                    <p class="filterTitle">Input 2</p>
                    <input type="text" />
                </div>

                <div class="filterSection col-lg-3">
                    <p class="filterTitle">Input 3</p>
                    <input type="text" />
                </div>

                <div class="filterSection col-lg-3">
                    <p class="filterTitle">Input 4</p>
                    <input type="text" />
                </div>
            </div>
            <br />

            <a class="btn btn-link btn-dark">Search</a>
            <hr />
        </div>

        <div class="table col-lg-12 listing">
            <h4 class="col-lg-12">All Items</h4>


            <div class="container">

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 listing">
                            <div class="card mb-4 shadow-sm">
                                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="40%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                                <div class="card-body">
                                    <p class="card-text">@Html.DisplayFor(model => item.DescriptionS)</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            @Html.ActionLink("Details", "Preview", new { id = item.ID }, new { @class = "btn btn-sm btn-outline-secondary", @role = "button" })
                                            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-sm btn-outline-secondary", @role = "button" })
                                        </div>
                                        <small class="text-muted">@Html.DisplayFor(model => item.ID)</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>



